# ============================================================================
# MINDPULSE - Environment Variables
# Copy this file to .env and fill in your values
# ============================================================================

# Django Settings
SECRET_KEY=your-super-secret-key-change-this
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database - USE SQLite for development (True = SQLite, False = PostgreSQL)
USE_SQLITE=True

# PostgreSQL Settings (only used if USE_SQLITE=False)
DB_NAME=mindpulse_db
DB_USER=postgres
DB_PASSWORD=your-database-password
DB_HOST=127.0.0.1
DB_PORT=5432

# Google Cloud Storage (only for production)
USE_GCS=False
GCS_BUCKET_NAME=your-bucket-name
GCS_PROJECT_ID=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
